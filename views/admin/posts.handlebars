<h2>Lista de Postagens</h2>
<hr>
<a href="/admin/posts/add"><button class="btn btn-success">Nova Postagem</button></a>

{{#each posts}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <small>Data: {{date}}</small>
            <br>
            <small>Categoria: {{categoria.nome}}</small>
            <br>
            <a href="/admin/posts/edit/{{_id}}"><button class="btn btn-success mt-3">Editar Postagem</button></a>
            <a href="/admin/posts/delete/{{_id}}"><button class="btn btn-danger mt-3">Excluir Postagem</button></a>
        </div>
    </div>
{{else}}
    <p>Nenhuma postagem registrada.</p>
{{/each}}